<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    tools:context="com.thisplace.mindrdr.SplashActivity"
    android:layout_width="match_parent"
    android:layout_height="360px"
    android:layout_margin="0px"
    android:padding="0px"
    android:translationX="0px"
    android:translationY="0px">
    >


    <ImageView
        android:id="@+id/black_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/black_bg"

        />

    <ImageView
        android:id="@+id/inside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/this_place_splashscreen_v1"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mindrdr_splashscreen_v1"
        android:visibility="invisible"

        />


</FrameLayout>
